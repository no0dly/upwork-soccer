.contacts
	.container
		.row
			.col-xs-6
				address.address
					h2.contacts__title#contacts Contact Us
					ul.address__list
						li.address__item.address__item--addr Poland, Cracow, Zielona 10
						li.address__item.address__item--phone +48 12 000 000 000
						li.address__item.address__item--email info@grandstand.com

					.socials
						h2.contacts__title Get Social
						ul.socials__list
							each soc in ['tw', 'fb', 'inst', 'ghost', 'v', 'ln']
								li.socials__item
									a.socials__link(href='#' class='socials__link--' + soc)
										span.hide= soc
			.touch.col-xs-6
				h2.contacts__title Contact Us
				form.touch__form(action="")
					input.input-text(type="text" placeholder="Your Name")
					input.input-text(type="email" placeholder="Your Email")
					textarea.input-area(type="text" placeholder="Write your message here")
					input.submit__buttom(type="submit" value="send a message")